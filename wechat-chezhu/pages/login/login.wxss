/* login */
.login{
  width: 100vw;
  height: 100vh;
}

.login image{
  width: 100%;
  height: 100%;
}

.login .button{
  position: absolute;
  bottom: 20%;
  left: 50%;
  z-index: 1;
  background-color: rgb(25,155,213);
  font-size: 34rpx;
  color: #fff;
  transform: translateX(-50%);
  border-radius: 10rpx;
}