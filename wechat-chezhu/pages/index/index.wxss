.box .own-info image{
  width: 70rpx;
  margin-right: 50rpx;
}

/* model */

.model {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}

.model .center {
  position: absolute;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%);
  width: 50%;
}

.model .center image {
  width: 100%;
}

.model .center .button {
  position: absolute;
  left: 50%;
  bottom: 8%;
  transform: translateX(-50%);
  width: 90%;
  text-align: center;
  padding: 12rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  background-color: rgb(254, 84, 51);
  color: #fff;
  font-size: 28rpx;
}

.model .center .close {
  position: absolute;
  left: 50%;
  bottom: -120rpx;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
}

.model .center .close::before, .model .center .close::after {
  position: absolute;
  top: 35%;
  content: '';
  width: 25rpx;
  height: 25rpx;
  border-left: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
}

.model .center .close::before {
  left: 50%;
  transform: translateX(-110%) rotate(-135deg);
}

.model .center .close::after {
  right: 50%;
  transform: translateX(115%) rotate(45deg);
}

