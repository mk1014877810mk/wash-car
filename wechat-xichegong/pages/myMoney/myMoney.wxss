/* pages/myMoney/myMoney.wxss */

page {
  color: #333;
  background-color: rgb(244, 246, 249);
}

.box .header {
  padding: 100rpx 0;
  text-align: center;
  background-color: #fff;
}

.box .header image {
  width: 180rpx;
}

.box .header view {
  font-size: 50rpx;
  font-weight: 600;
}

/* 收入 */

.box .body .money-detail {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx;
  border-top: 1px solid #ddd;
}

.box .body .money-detail::before {
  content: '';
  position: absolute;
  width: 1px;
  height: calc(100% - 90rpx);
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  margin: auto;
}

.box .body .money-detail>view {
  text-align: center;
}

.box .body .money-detail>view>view:nth-child(1) {
  font-weight: 600;
  font-size: 34rpx;
}

.box .body .money-detail>view>view:nth-child(2) {
  font-size: 24rpx;
  color: #999;
}

/* 跳转入口 */

.box .body .bill, .box .body .deposit {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.box .body .bill image, .box .body .deposit image {
  width: 10%;
}

.box .body  .bill text, .box .body  .deposit text {
  width: 80%;
  margin-left: 30rpx;
  font-size: 34rpx;
}

.box .body .bill text:nth-last-child(1),
.box .body .deposit text:nth-last-child(1) {
  width: 10%;
}

/* 提现模态框 */

.model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
}

.model .model-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  padding: 50rpx;
  border-radius: 8rpx;
  background-color: #fff;
  text-align: center;
}

.model .model-content image{
  position: fixed;
  top: 15%;
  width: 150rpx;
  left: 50%;
  transform: translateX(-50%);
}

.model .model-content .canto{
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin: 40rpx auto;
}

.model .model-content .canto text{
  font-size: 40rpx;
  color: #333;
}

.model .model-content .input{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
  color: #333;
  margin: 100rpx auto;
  font-weight: 600;
  font-size: 34rpx;
}

.model .model-content .input text.input-title{
  font-size: 32rpx;
  color: #666;
}

.model .model-content .input input{
  display: inline-block;
  padding: 10rpx 16rpx;
  font-size: 30rpx;
  font-weight: 400;
  width: 400rpx;
  margin-bottom: -20rpx;
  text-align: left;
  border-bottom: 1px solid #000;
}

.model .model-content view.submit{
  position: fixed;
  bottom: 25%;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  padding: 20rpx;
  font-size: 35rpx;
  background-color: #343d4a;
  color: #fff;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
}

.model .model-content .disabled{
  background-color: #ccc!important;
}
