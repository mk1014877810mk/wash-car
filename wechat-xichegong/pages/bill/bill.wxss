/* pages/bill/bill.wxss */

/* 头部信息 */

.box .top {
  padding: 30rpx 30rpx 16rpx;
  background-color: #fff;
  border-bottom: 6px solid rgb(245, 245, 245);
}

.box .top .data-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 46rpx;
  font-weight: 600;
}

.box .top .data-info {
  margin-top: 20rpx;
}

.box .top .data-info text {
  padding: 10rpx;
  font-size: 30rpx;
  border-bottom: 6rpx solid rgb(255, 102, 0);
}

/* 底部信息 */

.box .bottom {
  padding: 0 60rpx 40rpx 40rpx;
  margin-top: 20rpx;
  background-color: #fff;
  overflow: hidden;
}

.box .bottom .total-money {
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.box .bottom .total-money view>view:nth-child(1) {
  font-size: 38rpx;
  color: rgba(0, 128, 0, 0.847);
  margin-bottom: 10rpx;
}

.box .bottom .total-money view:nth-child(2)>view:nth-child(1) {
  color: rgb(255, 102, 0);
}

.box .bottom .data-list {
  margin-top: 70rpx;
  font-size: 34rpx;
  color: #333;
}

.box .bottom .data-list .data-date {
  display: inline-block;
  padding: 10rpx 40rpx;
  margin-left: -40rpx;
  font-weight: 600;
  box-sizing: border-box;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  background-color: rgb(235, 235, 235);
}

.box .bottom .data-list .data-content {
  position: relative;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding-left: 130rpx;
}

.box .bottom .data-list .data-content text:nth-child(1){
  position: absolute;
  display: inline;
  left: 0;
  top: 50%;
  transform: translate(0,-50%);
  padding: 6rpx 24rpx;
  border-radius: 30rpx;
  overflow: hidden;
  color: #fff;
  font-size: 30rpx;
}

.box .bottom .data-list .data-content text.yellow{
  background-color: rgb(255, 102, 0);
}

.box .bottom .data-list .data-content text.green{
  background-color: rgba(0, 128, 0, 0.847);
}
